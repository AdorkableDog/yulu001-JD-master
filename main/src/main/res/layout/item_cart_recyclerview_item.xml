<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/find_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">


    <com.sxjs.common.widget.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        app:yc_cornerRadius="10dp"
        app:yc_dx="0dp"
        app:yc_dy="0dp"
        app:yc_shadowColor="#2a484848"
        app:yc_shadowLimit="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shape_show_">


            <com.sxjs.common.widget.imageview.ExpandImageView
                android:id="@+id/expand_img"
                android:layout_width="@dimen/x280"
                android:layout_height="@dimen/x280"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                />

            <TextView
                android:id="@+id/tv_store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/expand_img"
                android:layout_toRightOf="@+id/expand_img"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:text="商品标题"
                android:textColor="#000"
                android:textSize="@dimen/font14"/>

            <TextView
                android:id="@+id/tv_store_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_store_title"
                android:layout_marginTop="@dimen/x20"
                android:layout_toRightOf="@+id/expand_img"
                android:background="@color/white"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:text=""
                android:textColor="#454545"
                android:textSize="@dimen/font10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_store_standard"
                android:layout_toRightOf="@+id/expand_img"
                android:layout_marginLeft="@dimen/x25"
                android:textSize="@dimen/font9"
                android:layout_marginTop="@dimen/x15"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x3"
                android:paddingBottom="@dimen/x3"
                android:text="白条3期免息"
                android:background="@drawable/shape_corner_e8_stroke0_5_radius16"
                android:textColor="@color/color_orange_red"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_store_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/expand_img"
                android:background="@color/white"
                android:layout_marginTop="@dimen/x15"
                android:layout_alignBottom="@+id/expand_img"
                android:layout_marginLeft="@dimen/x25"
                android:paddingBottom="@dimen/x5"
                android:maxLines="1"
                android:text="￥"
                android:textColor="#ff1a1a"
                android:textSize="@dimen/font10"/>


            <TextView
                android:id="@+id/tv_store_pics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:layout_alignBottom="@+id/expand_img"
                android:layout_toRightOf="@+id/tv_store_pic"
                android:background="@color/white"
                android:maxLines="1"
                android:text="120.0"
                android:textColor="#ff1a1a"
                android:textSize="@dimen/font15"/>



            <LinearLayout
                android:id="@+id/item_cart_ll"
                android:layout_width="@dimen/dis90"
                android:layout_height="@dimen/dis20"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/expand_img"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/item_cart_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_f1_radius2"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="@color/C85_85_85"
                    android:textSize="@dimen/font15"/>

                <TextView
                    android:id="@+id/item_cart_changeNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font17"/>

                <TextView
                    android:id="@+id/item_cart_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_f1_radius2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/C85_85_85"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>


        </RelativeLayout>

    </com.sxjs.common.widget.ShadowLayout>


</RelativeLayout>