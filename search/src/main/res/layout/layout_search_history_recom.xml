<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/x30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginLeft="@dimen/x20"
                android:layout_centerVertical="true"
                android:text="搜索历史"
                android:textColor="@color/black_font"
                android:textStyle="bold"
                android:textSize="@dimen/font14"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginBottom="@dimen/x30"
                android:src="@drawable/ic_icon_trash_can"/>

        </RelativeLayout>

        <com.kongzue.stacklabelview.StackLabel
            android:id="@+id/search_history_stackLabelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:deleteButton="false"
            app:deleteButtonImage="@mipmap/img_delete"
            app:itemMargin="4dp"
            app:minSelectNum="2"
            app:paddingHorizontal="18dp"
            app:paddingVertical="7dp"
            app:selectTextColor="@color/colorAccent"
            app:textColor="#e6000000"
            app:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/x30"
        android:orientation="vertical">

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginLeft="@dimen/x20"
                android:layout_centerVertical="true"
                android:text="搜索发现"
                android:textColor="@color/black_font"
                android:textStyle="bold"
                android:textSize="@dimen/font14"/>

        <!--</RelativeLayout>-->

        <com.kongzue.stacklabelview.StackLabel
            android:id="@+id/search_recom_stackLabelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:deleteButton="false"
            app:deleteButtonImage="@mipmap/img_delete"
            app:itemMargin="4dp"
            app:minSelectNum="2"
            app:paddingHorizontal="18dp"
            app:paddingVertical="7dp"
            app:selectTextColor="@color/colorAccent"
            app:textColor="#e6000000"
            app:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>